{
  "compilerOptions": {
    /* === Fichiers & sorties === */
    "rootDir": "src",
    "outDir": "dist",

    /* === Module & environnement === */
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "lib": ["esnext"],
    "types": ["node"],

    /* === Compatibilité ESM / CommonJS === */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false, // désactive pour corriger les imports

    /* === Options de build === */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,

    /* === Type checking strict === */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* === Autres === */
    "moduleDetection": "force",
    "isolatedModules": true
  },
  "include": ["src", "prisma.config.ts"],
  "exclude": ["node_modules", "dist"]
}
